<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/barre_action"
        android:background="@color/barre_action"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_return_home"
            android:layout_width="@dimen/barre_action"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_fleche" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/menu_parametres"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/barre_action"
            android:layout_height="match_parent"
            android:contentDescription="@string/aide"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_help" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pseudo" />

                <EditText
                    android:id="@+id/et_pseudo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pseudo"
                    android:inputType="textPersonName"
                    android:width="20dp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <CheckBox
                android:id="@+id/chk_vibrations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activer_vibrations" />

            <CheckBox
                android:id="@+id/chk_sons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activer_sons" />

            <CheckBox
                android:id="@+id/chk_afficher_retour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/afficher_retour_force" />

            <Button
                android:id="@+id/btn_enregistrer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enregistrer" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image_perso"
            android:src="@drawable/android_face" />
    </LinearLayout>

</LinearLayout>