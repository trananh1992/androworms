<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_solo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_solo"
                    android:width="100dp" />

                <Button
                    android:id="@+id/btn_multi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_multi"
                    android:width="100dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_menu_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_score"
                    android:width="100dp" />

                <Button
                    android:id="@+id/btn_menu_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_parametres"
                    android:width="100dp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/test_cam"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/test_camera" />

            <Button
                android:id="@+id/btn_DEBUG"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_DEBUG" />

            <Button
                android:id="@+id/btn_GYRO"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_gyro" />

        </LinearLayout>

</LinearLayout>